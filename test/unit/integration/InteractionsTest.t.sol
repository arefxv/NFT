pragma solidity ^0.8.19;

import {Test, console} from "forge-std/Test.sol";
import {MoodNft} from "src/MoodNft.sol";
import {DeployMoodNft} from "script/DeployMoodNft.s.sol";
import {MintMoodNft, FlipMoodNft} from "script/Interactions.s.sol";
import {DevOpsTools} from "lib/foundry-devops/src/DevOpsTools.sol";

contract InteractionsTest is Test {
    MintMoodNft public mint;
    FlipMoodNft public flip;
    MoodNft public mood;
    DeployMoodNft public deployer;

    uint256 public constant TOKEN_ID = 0;

    string public constant HAPPY_IMG_URI =
        "data:image/svg+xml;base64,";
    string public constant SAD_IMG_URI =
        "data:image/svg+xml;base64,";

    function setUp() public {
        deployer = new DeployMoodNft();
        mood = deployer.run();

        mint = new MintMoodNft();
        flip = new FlipMoodNft();
    }

    function testMintMoodNftOnContract() public {
        mint.mintMoodNftOnContract(address(mood));
    }

    function testFlipMoodNft() public {
        mint.mintMoodNftOnContract(address(mood));
        assert(keccak256(abi.encodePacked(mood.getHappySvgImgUri())) == keccak256(abi.encodePacked(HAPPY_IMG_URI)));

        flip.flipOnContract(address(mood));
        assert(keccak256(abi.encodePacked(mood.getSadSvgImgUri())) == keccak256(abi.encodePacked(SAD_IMG_URI)));
    }
}
